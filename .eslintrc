{
  "root": true,
  "extends": [
    "plugin:@wordpress/eslint-plugin/recommended"
  ],
  "settings": {
    "react": {
      "pragma": "wp",
      "version": "16.6"
    }
  },
  "globals": {
    "browser": true
  },
  "rules": {
    "@wordpress/i18n-text-domain": [
      "error",
      {
        "allowedTextDomain": [ "syntax-highlighting-code-block", "default" ]
      }
    ]
  }
}
