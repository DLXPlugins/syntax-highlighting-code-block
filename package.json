{
  "name": "westonruter-code-syntax",
  "license": "GPL-2.0-or-later",
  "main": "code-syntax.js",
  "devDependencies": {
    "eslint": "^5.3.0",
    "eslint-config-wordpress": "^2.0.0"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "wordpress"
    ],
    "env": {
      "browser": true,
      "node": false
    },
    "parserOptions": {
      "sourceType": "script",
      "ecmaVersion": 9
    }
  },
  "scripts": {
    "make-pot": "wp i18n make-pot . languages/code-syntax-block.pot --include=code-syntax-block.js",
    "zip": "zip -r code-syntax-block.zip index.php code-syntax.js languages $( git ls-files vendor )"
  },
  "dependencies": {
    "htm": "^1.0.1"
  }
}
